<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:text="OTP Verification"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:contentDescription="OTP verification title"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Instruction -->
        <TextView
            android:text="Enter the 6 digit OTP sent to your registered mobile number."
            android:textSize="18sp"
            android:textColor="#000000"
            android:contentDescription="OTP instructions"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- OTP Input -->
        <EditText
            android:id="@+id/etOtp"
            android:hint="Enter OTP"
            android:inputType="number"
            android:maxLength="6"
            android:textSize="22sp"
            android:padding="16dp"
            android:importantForAccessibility="yes"
            android:contentDescription="OTP input field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Verify Button -->
        <Button
            android:id="@+id/btnVerify"
            android:text="Verify OTP"
            android:textSize="22sp"
            android:padding="16dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:contentDescription="Verify OTP button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Resend -->
        <TextView
            android:id="@+id/txtResend"
            android:text="Resend OTP"
            android:textSize="18sp"
            android:textColor="#0000FF"
            android:layout_marginTop="16dp"
            android:contentDescription="Resend OTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
