<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Heading -->
        <TextView
            android:id="@+id/txtTitle"
            android:text="Accessible Voting Page"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:contentDescription="Accessible Voting Page Title"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Instructions -->
        <TextView
            android:id="@+id/txtInstruction"
            android:text="Please select one candidate and press the submit button. You will hear a voice confirmation."
            android:textSize="18sp"
            android:textColor="#000000"
            android:contentDescription="Voting instructions"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Radio Group -->
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Candidate selection">

            <RadioButton
                android:id="@+id/candidate1"
                android:text="Candidate A"
                android:textSize="22sp"
                android:padding="12dp"
                android:contentDescription="Candidate A option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/candidate2"
                android:text="Candidate B"
                android:textSize="22sp"
                android:padding="12dp"
                android:contentDescription="Candidate B option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/candidate3"
                android:text="Candidate C"
                android:textSize="22sp"
                android:padding="12dp"
                android:contentDescription="Candidate C option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:text="Submit My Vote"
            android:textSize="22sp"
            android:layout_marginTop="30dp"
            android:padding="16dp"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:contentDescription="Submit vote button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
