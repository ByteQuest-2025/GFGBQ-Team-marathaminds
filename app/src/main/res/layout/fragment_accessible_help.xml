<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:text="Voter Help & Support"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:contentDescription="Voter Help and Support page"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Description -->
        <TextView
            android:text="Tap any button below to get help. Audio guidance is available."
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"
            android:contentDescription="Help instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- How to Vote -->
        <Button
            android:id="@+id/btnHowToVote"
            android:text="How to Vote"
            android:textSize="22sp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="How to vote help button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Audio Guide -->
        <Button
            android:id="@+id/btnAudioGuide"
            android:text="Play Audio Guide"
            android:textSize="22sp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Play audio guide button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Emergency Assistance -->
        <Button
            android:id="@+id/btnEmergency"
            android:text="Emergency Assistance"
            android:textSize="22sp"
            android:padding="16dp"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:contentDescription="Emergency help button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
